<div>
  <table>
    <tr>
      <th>
        Name
      </th>
      <th>
        User
      </th>
      <th>
        <%= '# Runs' %>
      </th>
      <th>
        <%# = link_to 'New', :action => :new %>
      </th>
    </tr>
    <% for query in queries %>
      <tr>
        <td>
          <%= link_to query.name, query %>
	</td>
        <td class='center'>
          <%= link_to query.created_by.login, query.created_by %>
        </td>
        <td class='integer'>
          <%= h query.query_executions_count %>
        </td>
        <td>
          <% if controller.current_user_can_edit? query %>
            <%= link_to 'Edit', "#{query.id}/edit" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>


