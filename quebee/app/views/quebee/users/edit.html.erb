<h1>Edit User <%= h @user.login.inspect %></h1>

<%= error_messages_for :user %>

<%= form_for(@user, :action => url(:user, @user)) do %>

  <table>
    <% if current_user_can_edit? @user, :login %>
      <tr>
        <th>Login</th>
        <td><%= text_field :login %></td>
      </tr>
    <% end %>
    <% if current_user_can_edit? @user, :password %>
      <tr>
        <th>Password</th>
        <td><%= password_field :password %></td>
      </tr>
      <tr>
        <th>Password Again</th>
        <td><%= password_field :password_confirmation %></td>
      </tr>
    <% end %>
    <% if current_user_can_edit? @user, :enable_login %>
      <tr>
        <th>Enable Login?</td>
        <td><%= check_box :enable_login %></td>
      </tr>
    <% end %>
</table>

  <p><%= submit "Update" %></p>

<%= link_to 'Show', url(:user, @user) %>
|
<%= link_to 'Back', url(:users) %>
