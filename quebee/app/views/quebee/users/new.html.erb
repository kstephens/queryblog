<h1>Users (New)</h1>

<%= error_messages_for :user %>

<%= form_for(@user, :action => url(:users) ) do %>
  <table>
    <tr>
      <td>
        Login
      <td>
        <%= text_field :login %>
      </td>
    </td>
    <tr>
      <td>
        Password
      </td>
      <td>
        <%= password_field :password %>
      </td>
    </tr>
    <tr>
      <td>
        Password Again
      </td>
      <td>
        <%= password_field :password_confirmation %>
      </td>
    </tr>
  </tr>
  <p>
    <%= submit "Create" %>
  </p>
</table>

<%= link_to 'Back', url(:users) %>
